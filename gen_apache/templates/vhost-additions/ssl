<VirtualHost <%= address %>:<%= real_port %>>
  ServerAdmin	support@kumina.nl
  ServerName	<%= name %>
<% if serveralias -%>
  ServerAlias	<%= serveralias.to_a.join(" ") %>
<% end -%>
  RewriteEngine on
  RewriteRule ^(.*)?$ https://<%= name %>$1 [L,R]
</VirtualHost>

<VirtualHost <%= ssl_ipaddress %>:443>
  ServerAdmin	support@kumina.nl
  ServerName	<%= name %>
<% if serveralias -%>
  ServerAlias	<%= serveralias.to_a.join(" ") %>
<% end -%>
<% if scriptalias -%>
  ScriptAlias   /cgi-bin <%= scriptalias %>
  <Directory "<%= scriptalias %>">
    AllowOverride None
    Options ExecCGI
    Order allow,deny
    Allow from all
  </Directory>
<% end -%>

  SSLEngine On
  SSLCertificateFile /etc/apache2/ssl/<%= name %>.pem
  SSLCertificateKeyFile /etc/apache2/ssl/<%= name %>.key

  CustomLog	/var/log/apache2/<%= name %>-access.log combined
  ErrorLog	/var/log/apache2/<%= name %>-error.log
  DocumentRoot	<%= documentroot %>
  Include	/etc/apache2/vhost-additions/<%= name %>/
</VirtualHost>
