listen <%= safe_name %> <%= listenaddress %>:<%= port %>
<% servers.each do |server| -%>
	server <%= server %><% if cookie %> cookie<% end %><% if httpcheck_uri %> check<% end %><% if httpcheck_port %> port <%= httpcheck_port %><% end %>
<% end -%>
<% if cookie -%>
	cookie <%= cookie %>
<% end -%>
<% if httpcheck_uri -%>
	option httpchk GET <%= httpcheck_uri %>
<% end -%>
<% if balance -%>
	balance <%= balance %>
<% end -%>
<% if timeout_server -%>
	timeout server <%= timeout_server %>
<% end -%>
